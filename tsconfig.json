{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["svelte", "vite/client"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".svelte-kit",
    "dist",
    "build",
    "public",
    "**/*.config.js",
    "**/*.test.*"
  ]
}